package THAP1;
import java.util.Scanner;
public class THAP1 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n;
		System.out.printf("Nhap n: ");
		n = sc.nextInt();
		for(int i=1; i<=n; i++) {
			for(int j=n-i; j>=1; j--){
				System.out.printf("  ");
			}
			for(int a=1; a<=i; a++) {
				System.out.printf("* ");
			}
			System.out.printf("\n");
		}
	}
}
